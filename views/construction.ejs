<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Construction Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
    
        .dark-mode {
            background-color: #121212;
            color: white;
        }
    
        .navbar.dark-mode {
            background-color: #343a40;
        }
    
        /* Dark mode styling for table */
        .dark-mode table {
            background-color: #1a1a1a;
            color: #ccc;
        }
    
        .dark-mode table th, .dark-mode table td {
            border-color: #ff0000;
        }
    
        .dark-mode table th {
            background-color: #ff0000;
        }
    
        .dark-mode table tbody tr {
            background-color: #ff0000; /* Red background for table rows */
        }
    
        .dark-mode table td{
            color: #ffffff;
            background-color: #343a40;
        } .dark-mode table th {
            color: #ffffff;
            background-color: #000000;
        }
    
    </style>
    
</head>
<body class="<%= darkMode ? 'dark-mode' : '' %>">
    <nav class="navbar navbar-expand-lg <%= darkMode ? 'navbar-dark dark-mode' : 'navbar-light light-mode' %>">
        <div class="container">
            <a class="navbar-brand" href="#">My Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/construction">Construction</a>
                    </li>
                    <li class="nav-item">
                        <form method="POST" action="/toggle-dark-mode">
                            <button type="submit" name="darkMode" value="<%= darkMode ? 'false' : 'true' %>" class="btn btn-outline-dark ms-3">
                                <%= darkMode ? 'Light Mode' : 'Dark Mode' %>
                            </button>
                        </form> 
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>Construction Data</h1>

        <!-- Table for displaying data -->
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Work Time</th>
                    <th>Location</th>
                    <th>Mobile Number</th>
                </tr>
            </thead>
            <tbody>
                <% constructionData.forEach(function(row) { %>
                    <tr>
                        <td><%= row.name %></td>
                        <td><%= row.work_time %></td>
                        <td><%= row.location %></td>
                        <td><%= row.mobile_number %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
